function func5(leg1, leg2, hyp) {
  
}
//func1();
function pythChecker() {
  var num1 = prompt("leg 1: ");
  var num2 = prompt("leg 2: ");
  var num3 = prompt("leg 3: ");
  if (func1(num1, num2, num3) === true) {
    return "This is a pythagorean triplet.";
  } else {
    return "This is not a pythagorean triplet.";
  }
} 
//func2();
function hypSolver() {
  var num1 = prompt("leg");
  var num2 = prompt("hypotenuse");
  return func2(num1, num2);
}
//func3();
function legSolver() {
  var num1 = prompt("leg");
  var num2 = prompt("hypotenuse");
  return func3(num1, num2);
}
//func4();
function findAnglesVar1() {
  var num1 = prompt("Found angle: ");
  return func4(num1);
}
