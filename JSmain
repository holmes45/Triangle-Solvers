//sinDegrees();
function sinDegrees(angle) {
  return Math.sin(angle);
}
//pythChecker();
function func1(leg11, leg22, hyp2) {
  if (hyp2 > leg11 && hyp2 > leg22) {
    if (Math.sqrt((leg11 * leg11) + (leg22 * leg22)) === Math.sqrt(hyp2 * hyp2)) {
      return true;
    } else {
      return false;
    }
  } else {
    return "Invalid parameters.";
  }
}
//hypSolver();
function func2(leg1, leg2) {
  return Math.sqrt((leg1 * leg1) + (leg2 * leg2));
}
//legSolver();
function func3(leg, hyp) {
  if (hyp > leg) {
    return Math.sqrt((hyp * hyp) - (leg * leg));
  } else if (leg >= hyp) {
    return "Invalid parameters.";
  }
}
//findAnglesVar1();
function func4(angle1) {
  if (angle1 < 90) {
    return 90 - angle1;
  } else {
    return "Invalid parameters."
  }
}
